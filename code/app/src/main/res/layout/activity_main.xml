<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ListView
       android:id="@+id/city_list"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintBottom_toTopOf="@id/text_input"
       tools:ignore="MissingConstraints"
       tools:layout_editor_absoluteY="45dp"
       >

   </ListView>

   <Button
       android:id="@+id/add_city"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:text="Add City"
       app:layout_constraintTop_toTopOf="@id/main"
       app:layout_constraintBottom_toBottomOf="@id/main"
       app:layout_constraintVertical_bias="0.85"
       app:layout_constraintRight_toRightOf="@id/main"

       tools:ignore="HardcodedText"
       />

   <Button
       android:id="@+id/delete_city"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:text="Delete City"
       app:layout_constraintTop_toBottomOf="@id/add_city"
       app:layout_constraintRight_toRightOf="@id/main"
       tools:ignore="HardcodedText"
       />

   <Button
       android:id="@+id/confirm_button"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:text="Confirm"
       app:layout_constraintBottom_toBottomOf="@id/main"
       app:layout_constraintLeft_toRightOf="@id/text_input"
       app:layout_constraintRight_toRightOf="@id/main"
       android:visibility="gone"
       tools:ignore="HardcodedText"
       />

   <com.google.android.material.textfield.TextInputEditText
       android:id="@+id/text_input"
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_constraintBottom_toBottomOf="@id/main"
       app:layout_constraintLeft_toLeftOf="@id/main"
       app:layout_constraintRight_toLeftOf="@id/confirm_button"
       app:layout_constraintDimensionRatio="5:1"
       android:inputType="textWebEditText"
       android:hint="Enter city name here"
       android:visibility="gone"
       tools:ignore="HardcodedText"

       >
   </com.google.android.material.textfield.TextInputEditText>


</androidx.constraintlayout.widget.ConstraintLayout>